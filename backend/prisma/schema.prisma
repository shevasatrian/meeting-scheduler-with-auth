generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OrganizerSettings {
  id                Int     @id @default(autoincrement())
  timezone          String
  workingHoursStart String
  workingHoursEnd   String
  meetingDuration   Int
  bufferBefore      Int
  bufferAfter       Int
  minimumNotice     Int
  blackoutDates     Json
}

model Booking {
  id           Int      @id @default(autoincrement())
  inviteeName  String
  inviteeEmail String
  startTime    DateTime
  endTime      DateTime
  createdAt    DateTime @default(now())

  reminded1Hour   Boolean @default(false)
  remindedAtStart Boolean @default(false)

  isDeleted     Boolean   @default(false)
  deletedAt     DateTime?
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String   // hashed password
  createdAt DateTime @default(now())
}

